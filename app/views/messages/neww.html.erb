<% provide(:title, "Contact") %>

<div class="container">

  <div class="row">
            <div class="col-md-12">
                <h1 class="text-center">Make Contact</h1>
                <hr>
            </div>

    <form role="form">
      <div class="col-lg-6">
        <%= form_for @message, url: contact_path do |message_form| %>


        <div class="form-group">
          <%= message_form.label :first_name %>
          <div class="input-group">
          <%= message_form.text_field :first_name %>
          </div>
        </div>


        <div class="form-group">
          <%= message_form.label :last_name %>
          <div class="input-group">
          <%= message_form.text_field :last_name %>
          </div>

        </div>

        <div class="form-group">
          <%= message_form.label :email %>
          <div class="input-group">
          <%= message_form.text_field :email %>
          </div>

        </div>
        


        <div class="form-group">
          <%= message_form.label :title %>
          <div class="input-group">
          <%= message_form.text_field :title %>
          </div>

        </div>
        
        <div class="form-group">
          <%= message_form.label :phone %>
          <div class="input-group">
          <%= message_form.text_field :phone %>
          </div>

        </div>
        
      
        <div class="form-group">
          <%= message_form.label :content %>
          <div class="input-group">
          <%= message_form.text_area :content %>
          </div>

        </div>

      
        <div class="input-group">
         <%= message_form.submit "Contact Us", class: "btn btn-info pull-right" %>
        </div>
    <% end %>

    </form>

      <hr class="featurette-divider hidden-lg">
        <div class="col-lg-5 col-md-push-1">
          <address>
          <h3>Office Location</h3>
          <p class="lead"><a href="https://www.google.com/maps/preview?ie=UTF-8&q=The+Pentagon&fb=1&gl=us&hq=1400+Defense+Pentagon+Washington,+DC+20301-1400&cid=12647181945379443503&ei=qmYfU4H8LoL2oATa0IHIBg&ved=0CKwBEPwSMAo&safe=on">The Pentagon<br>
      Washington, DC 20301</a><br>
            Phone: XXX-XXX-XXXX<br>
            Fax: XXX-XXX-YYYY</p>
          </address>
        </div>
  </div>

</div>




        